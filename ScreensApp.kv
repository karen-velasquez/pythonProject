ScreenManager:
    MenuScreen:
    VideoScreen:
    ListExerciseScreen:

<MenuScreen>:
    name: 'menu'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source: "images/logo_fisio.jpg"
            pos_hint: {"y": .30}
        MDLabel:
            text: "Ingreso"
            post_hint: {"center_x": .5,"center_y": .3}
            halign: "center"

            font_name: "styles/Poppins-SemiBold.ttf"
            font_size: "40sp"
            theme_text_color: "Custom"

            text_color: 60/255, 43/255, 117/255, 1

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .38}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: loginusername
                hint_text: "Username"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "styles/Poppins-Regular.ttf"
                font_size: "18sp"

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .28}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: loginpassword
                hint_text: "Password"
                password: True
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "styles/Poppins-Regular.ttf"
                font_size: "18sp"

        MDRoundFlatButton:
            text: 'Ingresar'
            font_name: "styles/Poppins-Regular.ttf"
            font_size: "20sp"
            size_hint: .5, .08
            pos_hint: {'center_x':0.5,'center_y':0.12}
            md_bg_color:(0.05, 0.32, 0.42, 0.78)
            text_color:"white"
            line_color: 0, 0, 0, 0
            on_press:
                root.login(loginusername.text, loginpassword.text)




<VideoScreen>:
    name: 'video'

    FloatLayout:
        Label:
            text: "Webcam from OpenCV?"
            pos_hint: {"x":0.0, "y":0.8}
            size_hint: 1.0, 0.2

        Image:
            # this is where the video will show
            # the id allows easy access
            id: vid
            size_hint: 1, 0.9
            source: 'images/exercise.png'
            allow_stretch: True  # allow the video image to be scaled
            keep_ratio: True  # keep the aspect ratio so people don't look squashed
            pos_hint: {'center_x':0.5, 'top':1}

        MDRoundFlatIconButton:
            text: 'VOLVER'
            icon_color: "white"
            icon: "arrow-left-circle"
            font_size: "20sp"
            md_bg_color:(0.2, 0.28, 0.34, 0.78)
            font_name:"styles/Poppins-Regular.ttf"
            text_color:"white"
            theme_text_color: "Custom"
            pos_hint: {"x":0.4, "y":0.0}
            size_hint: .2, 0.1
            font_size: 20
            on_release:
                root.stop_vid()
                root.manager.current = 'listExercise'




<ListExerciseScreen>:
    name: 'listExercise'

    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Sistema de Seguimiento"
            use_overflow: True
            md_bg_color: 0.09, 0.52, 0.62, 0.69

            elevation: 0

        BoxLayout:
            id: top_box
            orientation: "horizontal"
            spacing: 10

            BoxLayout:
                padding: 8
                spacing: 20
                width: 350
                id: bottom_box
                orientation: 'vertical'
                size_hint_x: None

                MDLabel:
                    text: "Menú"
                    padding: "4dp", "4dp"
                    font_name: "styles/Poppins-SemiBold.ttf"
                    font_size: "20sp"
                    theme_text_color: "Custom"
                    halign: "center"
                    adaptive_height: True
                    canvas.before:
                        Color:
                            rgb: (255/255, 255/255, 255/255, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos

                MDRoundFlatIconButton:
                    id: btn_camara
                    icon: "camera-flip"
                    icon_color: "white"
                    font_size: "20sp"
                    md_bg_color:(0.2, 0.28, 0.34, 0.78)
                    font_name:"styles/Poppins-Regular.ttf"
                    text_color:"white"
                    theme_text_color: "Custom"
                    text: '  Cámara'
                    size_hint_x: 1
                    size_hint_y: None
                    on_press:
                        root.btnCamara()


                MDRoundFlatIconButton:
                    id: btn_informe
                    font_size: "20sp"
                    icon: "chart-line"
                    icon_color: "white"
                    md_bg_color:(0.2, 0.28, 0.34, 0.78)
                    font_name:"styles/Poppins-Regular.ttf"
                    text_color:"white"
                    text: '  Informe'
                    size_hint_x: 1
                    size_hint_y: None
                    on_press:
                        root.btnInformeEjercicios()


                MDRoundFlatIconButton:
                    id: btn_informacion
                    font_size: "20sp"
                    icon: "help-circle"
                    icon_color: "white"
                    md_bg_color:(0.2, 0.28, 0.34, 0.78)
                    font_name:"styles/Poppins-Regular.ttf"
                    text_color:"white"
                    text: '  Extra'
                    size_hint_x: 1
                    size_hint_y: None
                    on_press:
                        root.btnInformacion()


                Widget:


            MDBoxLayout:
                id: boxLayoutList
                orientation: "vertical"
                size_hint_x: None
                width: top_box.width - bottom_box.width - 50
                canvas.before:
                    Color:
                        rgb: (255/255, 255/255, 255/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        source: 'images/bluelight30.png'

                MDLabel:
                    font_name: "styles/Poppins-SemiBold.ttf"
                    font_size: "50sp"
                    theme_text_color: "Custom"
                    text_color: 60/255, 43/255, 117/255, 1
                    text: '\nEjercicios Asignados'
                    halign: 'center'
                    size_hint_y: None
                    pos_hint: {"center_x": .5, "center_y": .9}

                MDLabel:
                    font_name: "styles/Poppins-Regular.ttf"
                    adaptive_size: True
                    font_size: "20sp"
                    height: "10sp"
                    pos_hint: {"center_x": .5, "center_y": .2}
                    size_hint_y: None
                    text: '\nRealiza los ejercicios asignados\nconstantemente para una buena recuperación !!!!'
                    halign: 'center'

                Carousel:
                    id:carousel
                    pos_hint: {"center_x": .5, "center_y": .5}


                Button:
                    size_hint: (.1, .2)
                    pos_hint: {'center_y':0.1}
                    background_color: 1, 1, 1, 0
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'menu'
                    Image:
                        source: "images/back.png"
                        allow_stretch: True
                        y: self.parent.y
                        x: self.parent.x
                        size: self.parent.size





<PopUpCamera>:
    name: 'popUpCamera'
    DropDown:
        name: 'dropDown'
