ScreenManager:
    MenuScreen:
    VideoScreen:
    ListExerciseScreen:

<MenuScreen>:
    name: 'menu'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source: "images/logo_fisio.jpg"
            pos_hint: {"y": .30}
        MDLabel:
            text: "Ingreso"
            post_hint: {"center_x": .5,"center_y": .3}
            halign: "center"

            font_name: "styles/Poppins-SemiBold.ttf"
            font_size: "40sp"
            theme_text_color: "Custom"

            text_color: 60/255, 43/255, 117/255, 1

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .38}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: loginusername
                hint_text: "Username"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "styles/Poppins-Regular.ttf"
                font_size: "18sp"

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .28}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: loginpassword
                hint_text: "Password"
                password: True
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "styles/Poppins-Regular.ttf"
                font_size: "18sp"



        Button:
            text: 'EXERCISE'
            font_name: "styles/Poppins-Regular.ttf"
            font_size: "20sp"
            size_hint: .5, .08
            pos_hint: {'center_x':0.5,'center_y':0.22}
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgb: (145/255, 216/255, 227/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press:
                root.manager.current = 'video'


        Button:
            text: 'Ingresar'
            font_name: "styles/Poppins-Regular.ttf"
            font_size: "20sp"
            size_hint: .5, .08
            pos_hint: {'center_x':0.5,'center_y':0.12}
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgb: 145/255, 216/255, 227/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            on_press: root.login(loginusername.text, loginpassword.text)







<VideoScreen>:
    name: 'video'

    FloatLayout:
        Label:
            text: "Webcam from OpenCV?"
            pos_hint: {"x":0.0, "y":0.8}
            size_hint: 1.0, 0.2

        Image:
            # this is where the video will show
            # the id allows easy access
            id: vid
            size_hint: 1, 0.9
            allow_stretch: True  # allow the video image to be scaled
            keep_ratio: True  # keep the aspect ratio so people don't look squashed
            pos_hint: {'center_x':0.5, 'top':1}

        Button:
            text: 'Stop Video'
            pos_hint: {"x":0.4, "y":0.0}
            size_hint: .2, 0.1
            font_size: 20
            on_release: root.stop_vid()








<ListExerciseScreen>:
    name: 'listExercise'

    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Sistema de Seguimiento"
            use_overflow: True
            md_bg_color: 0, 0.6, 0.9, 1
            spacing: 10

        BoxLayout:
            id: top_box
            orientation: "horizontal"
            spacing: 10

            BoxLayout:
                padding: 8
                spacing: 20
                width: 350
                id: bottom_box
                orientation: 'vertical'
                size_hint_x: None


                MDLabel:
                    text: "Menú"
                    padding: "4dp", "4dp"
                    font_name: "styles/Poppins-SemiBold.ttf"
                    font_size: "20sp"
                    theme_text_color: "Custom"
                    halign: "center"
                    adaptive_height: True
                    canvas.before:
                        Color:
                            rgb: (255/255, 255/255, 255/255, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos



                Button:
                    id: btn_camara
                    font_name: "styles/Poppins-Regular.ttf"
                    font_size: "20sp"
                    background_color: 1,1,1,1
                    theme_text_color: "Custom"
                    text: 'Cámara'
                    color: 1, 1, 1, 1
                    size_hint_x: None
                    size_hint_y: None
                    width: 340
                    height: 40
                    on_press:
                        self.background_color = (0.83, 0.84, 0.85, 1)
                        root.btnCamara()
                    on_release:
                        self.background_color = (0.83, 0.84, 0.85, 1)
                    canvas.before:
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos


                Button:
                    id: btn_informe
                    font_name: "styles/Poppins-Regular.ttf"
                    font_size: "20sp"
                    background_color: 1,1,1,1
                    text: 'Informe'
                    color: 1,1,1,1
                    size_hint_x: None
                    size_hint_y: None
                    width: 340
                    height: 40
                    on_press:
                        self.background_color = (0.83, 0.84, 0.85, 1)
                        root.btnInformeEjercicios()
                    on_release:
                        self.background_color = (0.83, 0.84, 0.85, 1)
                    canvas.before:
                        Color:
                            rgb: (145/255, 216/255, 227/255, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos


                Button:
                    id: btn_informacion
                    font_name: "styles/Poppins-Regular.ttf"
                    font_size: "20sp"
                    background_color: 1,1,1,1
                    text: 'Extra'
                    color: 1,1,1,1
                    size_hint_x: None
                    size_hint_y: None
                    width: 340
                    height: 40
                    on_press:
                        self.background_color = (0.83, 0.84, 0.85, 1)
                        root.btnInformacion()
                    on_release:
                        self.background_color = (0.83, 0.84, 0.85, 1)
                    canvas.before:
                        Color:
                            rgb: (145/255, 216/255, 227/255, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                Widget:






            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: top_box.width - bottom_box.width - 50
                canvas.before:
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        source: 'images/backgroundBlueMore.jpg'

                MDLabel:
                    font_name: "styles/Poppins-SemiBold.ttf"
                    font_size: "40sp"
                    theme_text_color: "Custom"
                    text_color: 60/255, 43/255, 117/255, 1
                    text: 'Ejercicios Asignados'
                    halign: 'center'
                    size_hint_y: None
                    pos_hint: {"center_x": .5, "center_y": .9}

                MDLabel:
                    adaptive_size: True
                    height: "20sp"
                    pos_hint: {"center_x": .5, "center_y": .2}
                    size_hint_y: None
                    text: 'Realiza los ejercicios asignados\n\n constantemente para una buena recuperacion !!!!'
                    halign: 'center'


                Carousel:
                    id: carousel
                    pos_hint: {"center_x": .5, "center_y": .5}


                MDRectangleFlatButton:
                    text: 'Back'
                    pos_hint: {'center_x':0.5,'center_y':0.1}
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'menu'







<PopUpCamera>:
    name: 'popUpCamera'
    DropDown:
        name: 'dropDown'
